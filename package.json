{
  "name": "junaikey-markdown-typescript-toolchain",
  "version": "1.0.0",
  "description": "A VS Code workspace for Markdown and TypeScript development with integrated preview, debugging, and linting.",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "start": "ts-node-dev src/index.ts",
    "lint:ts": "eslint src/**/*.ts",
    "lint:md": "markdownlint docs/**/*.md",
    "lint": "npm run lint:ts && npm run lint:md",
    "test": "jest",
    "preview": "markdown-preview-enhanced docs/guide.md"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.0",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "eslint": "^8.37.0",
    "jest": "^29.5.0",
    "markdownlint": "^0.28.1",
    "markdownlint-cli": "^0.32.2",
    "prettier": "^2.8.7",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.2"
  },
  "keywords": [
    "typescript",
    "markdown",
    "vscode",
    "toolchain",
    "development"
  ],
  "author": "Junaikey",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.19.1",
    "openai": "^6.2.0"
  }
}
